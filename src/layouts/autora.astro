---
import { Picture } from 'astro:assets'

import BaseLayout from './layout.astro'

import autoraPhoto from '../assets/carme-miquel.jpg'

const {
	frontmatter: { title, meta },
} = Astro.props
---

<BaseLayout color="autora" title={title} meta={meta}>
	<slot />
	<Fragment slot="aside">
		<Picture alt="" formats={['avif', 'webp']} src={autoraPhoto} width={200} />
	</Fragment>
</BaseLayout>
