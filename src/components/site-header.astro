	<nav>
		<a href="/">
			<Picture
				alt="Carme Miquel"
				formats={['avif', 'webp']}
				src={headerImage}
				widths={[
					260,
					320,
					380,
					410,
					450,
					600,
					680,
					750,
					800,
					headerImage.width,
				]}
			/>
		</a>
		<ul class={styles.menu}>
			<li class="autora">
				<a href="/autora/">
					<Icon name="autora" />
					<span>Autora</span>
				</a>
			</li>
			<li class="entrevistes">
				<a href="/entrevistes/">
					<Icon name="entrevistes" />
					<span>Entrevistes</span>
				</a>
			</li>
			<li class="llibres">
				<a href="/llibres/">
					<Icon name="llibres" />
					<span>Llibres</span>
				</a>
			</li>
			<li class="articles">
				<a href="/articles/">
					<Icon name="articles" />
					<span>Articles</span>
				</a>
			</li>
