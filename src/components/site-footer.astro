const year = new Date().getFullYear()
---

<footer class="footer">
	<p>
		<small
			>© Carme Miquel, 2009&ndash;{year}. <a href="/politica-de-privadesa/"
				>Política de privadesa</a
			></small
		>
	</p>
	<p>
		<small
			>Disseny Web: <a href="https://www.guillemandreu.com" target="_blank"
				>Guillem Andreu</a
			></small
		>
	</p>
</footer>

<style lang="scss">
	@layer layout {
		.footer {
			color: var(--color-foreground-light);
			font-family: var(--font-stack-serif);
			font-size: 0.8rem;
			margin: 2rem auto 1rem;
			margin-right: auto;
			max-width: var(--max-width);
			width: 100%;
		}

		@media (width >= 1125px) {
			.footer {
				display: grid;
				gap: 2rem;
				grid-template-columns: repeat(3, 1fr);

				p {
					margin: 0;

					&:first-child {
						grid-column: 2 / span 1;
					}

					&:last-child {
						grid-column: 3 / span 1;
						text-align: right;
					}
				}
			}
		}
	}
</style>
